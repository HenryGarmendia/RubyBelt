<%= simple_form_for @user, url: { action: "login" } do |f| %>
	<div class="form-group">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div><!-- //form-group -->
	<div class="form-group">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div><!-- //form-group -->
	<div class="form-group">
		<%= f.submit "Login", class: "button" %>
	</div><!-- //form-group -->
<% end %>